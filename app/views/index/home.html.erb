<header><h1>Dr. von Ozgg</h1></header>
<section id="front_posts">
  <header><h2><%= t('.recent') %></h2></header>
  <ul>
    <% @posts.each do |post| %>
      <li>
        <time datetime="<%= post.created_at.to_datetime %>"><%= post.created_at %></time>
        <h3><%= link_to post.title, post %></h3>
        <p class="description"><%= post.description %></p>
      </li>
    <% end %>
  </ul>
</section>

