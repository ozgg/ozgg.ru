<article class="post">
  <header>
    <time datetime="<%= post.created_at.to_datetime %>"><%= l post.created_at, format: :long %></time>
    <h2><%= post.title %></h2>
  </header>
  <div>
    <%= raw process_entry_body post.body %>
  </div>
  <% if session[:user_id] %>
  <footer>
    <ul>
      <li><%= link_to t('show'), post %></li>
      <li><%= link_to t('edit'), edit_post_path(post) %></li>
      <li><%= link_to t('delete'), post, confirm: t('sure'), method: :delete %></li>
    </ul>
  </footer>
  <% end %>
</article>
