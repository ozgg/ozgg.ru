<h1>Listing posts</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Alias</th>
    <th>Body raw</th>
    <th>Body</th>
    <th>Preview</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.title %></td>
    <td><%= post.alias %></td>
    <td><%= post.body_raw %></td>
    <td><%= post.body %></td>
    <td><%= post.preview %></td>
    <td><%= post.description %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Post', new_post_path %>
