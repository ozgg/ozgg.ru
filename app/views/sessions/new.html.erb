<div class="depot_form">
  <%= form_tag do %>
      <fieldset>
        <legend><%= t('log_in') %></legend>
        <div>
          <%= label_tag :name, t('.name') %>
          <%= text_field_tag :name, params[:name], :autofocus => true %>
        </div>
        <div>
          <%= label_tag :password, t('.password') %>
          <%= password_field_tag :password, params[:password] %>
        </div>
        <div>
          <%= submit_tag t('.login') %>
        </div>
      </fieldset>
  <% end %>
</div>